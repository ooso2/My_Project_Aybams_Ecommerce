<div class="hero-section bg-success text-white py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold">Sustainable Living Made Simple</h1>
        <p class="lead">Discover eco-friendly products for your home, wellness, and lifestyle. Quality you can trust, sustainability you can feel good about.</p>
        <%= link_to "Shop Now", products_path, class: "btn btn-light btn-lg me-2" %>
        <%= link_to "View All Products", products_path, class: "btn btn-outline-light btn-lg" %>
      </div>
      <div class="col-lg-6">
        <div class="text-center">
          <i class="fas fa-leaf fa-5x mb-3"></i>
          <h3>Eco-Friendly Products</h3>
          <p>Quality sustainable products for your home and lifestyle.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- FEATURED PRODUCTS SECTION -->
<% if @featured_products.any? %>
  <div class="container my-5">
    <div class="text-center mb-4">
      <h2>Featured Products</h2>
      <p class="lead">Check out our hand-picked sustainable favorites</p>
      <%= link_to "View All Products", products_path, class: "btn btn-outline-success" %>
    </div>
    <div class="row">
      <% @featured_products.each do |product| %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <%= render 'shared/product_card', product: product %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "Browse All Products â†’", products_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
<% end %>

<!-- SEARCH SECTION -->
<div class="bg-light py-5">
  <div class="container text-center">
    <h3>Find What You're Looking For</h3>
    <p class="lead mb-4">Search through our collection of sustainable products</p>
    
    <%= form_with url: products_path, method: :get, local: true, class: "row justify-content-center" do |f| %>
      <div class="col-md-6">
        <div class="input-group input-group-lg">
          <%= f.text_field :search, placeholder: "Search products, categories, or keywords...", class: "form-control", value: params[:search] %>
          <%= f.submit "Search Products", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- CATEGORIES SECTION -->
<% if @categories.any? %>
  <div class="container my-5">
    <div class="text-center mb-4">
      <h2>Shop by Category</h2>
      <p class="lead">Browse our sustainable product categories</p>
    </div>
    <div class="row">
      <% @categories.each do |category| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 text-center">
            <div class="card-body">
              <i class="fas fa-leaf fa-3x text-success mb-3"></i>
              <h5 class="card-title"><%= category.name %></h5>
              <p class="card-text"><%= category.description %></p>
              <%= link_to "Shop #{category.name}", category_path(category), class: "btn btn-outline-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "View All Categories", categories_path, class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<!-- RECENT PRODUCTS -->
<% if @recent_products.any? %>
  <div class="container my-5">
    <div class="text-center mb-4">
      <h2>New Arrivals</h2>
      <p class="lead">Our latest sustainable products</p>
    </div>
    <div class="row">
      <% @recent_products.each do |product| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <%= render 'shared/product_card', product: product %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-4 text-center mb-4">
      <i class="fas fa-recycle fa-3x text-success mb-3"></i>
      <h4>Eco-Friendly</h4>
      <p>All our products are sustainably sourced and environmentally responsible.</p>
    </div>
    <div class="col-md-4 text-center mb-4">
      <i class="fas fa-heart fa-3x text-success mb-3"></i>
      <h4>Quality Focused</h4>
      <p>We believe sustainability shouldn't mean compromising on quality or style.</p>
    </div>
    <div class="col-md-4 text-center mb-4">
      <i class="fas fa-home fa-3x text-success mb-3"></i>
      <h4>Local Support</h4>
      <p>Supporting Manitoba artisans and Canadian-made products whenever possible.</p>
    </div>
  </div>
</div>
