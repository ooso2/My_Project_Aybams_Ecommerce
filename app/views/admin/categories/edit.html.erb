<div class="d-flex justify-content-between align-items-center py-3 border-bottom">
  <h1 class="h2">Edit Category</h1>
  <%= link_to "Back", admin_categories_path, class: "btn btn-secondary" %>
</div>

<div class="mt-3">
  <%= form_with model: [:admin, @category], local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :parent_id, "Parent Category", class: "form-label" %>
      <%= f.collection_select :parent_id, Category.where.not(id: @category.id), :id, :name, { include_blank: "None" }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :sort_order, class: "form-label" %>
      <%= f.number_field :sort_order, class: "form-control", min: 0 %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :is_active, class: "form-check-input", id: "category_is_active" %>
      <%= f.label :is_active, "Active", class: "form-check-label", for: "category_is_active" %>
    </div>

    <%= f.submit "Update Category", class: "btn btn-primary" %>
  <% end %>
</div>
