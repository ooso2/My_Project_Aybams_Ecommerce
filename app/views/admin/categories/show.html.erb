<div class="d-flex justify-content-between align-items-center py-3 border-bottom">
  <h1 class="h2"><%= @category.name %></h1>
  <%= link_to "Edit", edit_admin_category_path(@category), class: "btn btn-warning" %>
</div>

<div class="mt-3">
  <p><strong>Parent Category:</strong> <%= @category.parent&.name || "None" %></p>
  <p><strong>Description:</strong> <%= @category.description.presence || "No description" %></p>
  <p><strong>Children:</strong>
    <% if @category.children.any? %>
      <%= @category.children.map(&:name).join(", ") %>
    <% else %>
      <span class="text-muted">None</span>
    <% end %>
  </p>
</div>

<div class="mt-4">
  <%= link_to "Back to Categories", admin_categories_path, class: "btn btn-secondary" %>
</div>