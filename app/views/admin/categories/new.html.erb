class Admin::CategoriesController < Admin::BaseController
  def new
    @category = Category.new
    @categories = Category.all.order(:name) # For a parent category dropdown if needed
  end

  def create
    @category = Category.new(category_params)
    if @category.save
      redirect_to admin_categories_path, notice: "Category created successfully."
    else
      @categories = Category.all.order(:name)
      render :new
    end
  end

  private

  def category_params
    params.require(:category).permit(:name, :description, :parent_id, :is_active)
  end
end
