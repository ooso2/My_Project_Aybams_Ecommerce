<div class="row">
  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :current_price, class: "form-label" %>
      <%= form.number_field :current_price, step: 0.01, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :stock_quantity, class: "form-label" %>
      <%= form.number_field :stock_quantity, class: "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :sku, class: "form-label" %>
      <%= form.text_field :sku, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :category_id, class: "form-label" %>
      <%= form.select :category_id, options_from_collection_for_select(@categories || [], :id, :name, @product.category_id), 
                     { prompt: 'Select Category' }, { class: "form-select" } %>
    </div>
  </div>
</div>

<div class="form-check mb-3">
  <%= form.check_box :is_active, class: "form-check-input" %>
  <%= form.label :is_active, "Active", class: "form-check-label" %>
</div>
