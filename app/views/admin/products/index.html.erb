<div class="d-flex justify-content-between align-items-center py-3 border-bottom">
  <h1 class="h2">Products</h1>
  <%= link_to "Add New Product", new_admin_product_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive mt-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>SKU</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <% if product.main_image %>
              <%= image_tag product.main_image, size: "50x50", class: "rounded" %>
            <% else %>
              <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                <i class="fas fa-image text-muted"></i>
              </div>
            <% end %>
          </td>
          <td><%= product.name %></td>
          <td><%= product.sku %></td>
          <td>$<%= product.current_price %></td>
          <td><%= product.stock_quantity %></td>
          <td>
            <span class="badge bg-<%= product.is_active? ? 'success' : 'secondary' %>">
              <%= product.is_active? ? 'Active' : 'Inactive' %>
            </span>
          </td>
          <td>
            <%= link_to "View", admin_product_path(product), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-sm btn-outline-warning" %>
            <%= button_to "Delete", admin_product_path(product), 
                          method: :delete, 
                          confirm: "Are you sure?", 
                          class: "btn btn-sm btn-outline-danger",
                          style: "display: inline;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
