<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">
    <i class="fas fa-users"></i> Manage Users
  </h1>
</div>

<div class="card shadow">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Location</th>
            <th>Joined</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td>
                <span class="badge bg-<%= user.admin? ? 'danger' : 'primary' %>">
                  <%= user.role.humanize %>
                </span>
              </td>
              <td>
                <%= [user.city, user.province].compact.join(', ') %>
              </td>
              <td><%= user.created_at.strftime("%m/%d/%Y %H:%M") %></td>
              <td>
                <%= link_to "View", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-outline-warning" %>
                <% unless user.id == current_user.id %>
                  <%= link_to "Delete", admin_user_path(user), method: :delete, 
                              confirm: "Are you sure?", class: "btn btn-sm btn-outline-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
