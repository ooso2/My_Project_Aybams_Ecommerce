<div class="container my-4">
  <h2>Checkout</h2>

  <%= form_with model: @order, url: checkout_index_path, method: :post, local: true do |f| %>
    <div class="row">
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header">
            <h5>Shipping Information</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <%= f.label :shipping_first_name, class: "form-label" %>
                <%= f.text_field :shipping_first_name, class: "form-control", required: true %>
              </div>
              <div class="col-md-6">
                <%= f.label :shipping_last_name, class: "form-label" %>
                <%= f.text_field :shipping_last_name, class: "form-control", required: true %>
              </div>
            </div>

            <div class="mt-3">
              <%= f.label :shipping_address, class: "form-label" %>
              <%= f.text_area :shipping_address, class: "form-control", rows: 2, required: true %>
            </div>

            <div class="row mt-3">
              <div class="col-md-6">
                <%= f.label :shipping_city, class: "form-label" %>
                <%= f.text_field :shipping_city, class: "form-control", required: true %>
              </div>
              <div class="col-md-3">
                <%= f.label :shipping_province, class: "form-label" %>
                <%= f.select :shipping_province,
                    options_for_select([
                      ['Alberta', 'AB'], ['British Columbia', 'BC'], ['Manitoba', 'MB'],
                      ['New Brunswick', 'NB'], ['Newfoundland and Labrador', 'NL'],
                      ['Northwest Territories', 'NT'], ['Nova Scotia', 'NS'],
                      ['Nunavut', 'NU'], ['Ontario', 'ON'], ['Prince Edward Island', 'PE'],
                      ['Quebec', 'QC'], ['Saskatchewan', 'SK'], ['Yukon', 'YT']
                    ], @order.shipping_province),
                    { prompt: 'Select Province' }, { class: "form-select", required: true } %>
              </div>
              <div class="col-md-3">
                <%= f.label :shipping_postal_code, class: "form-label" %>
                <%= f.text_field :shipping_postal_code, class: "form-control", required: true %>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-md-6">
                <%= f.label :shipping_phone, class: "form-label" %>
                <%= f.text_field :shipping_phone, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-header">
            <h5>Billing Information</h5>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="sameAsShipping" checked>
              <label class="form-check-label" for="sameAsShipping">
                Same as shipping address
              </label>
            </div>
          </div>
          <div class="card-body" id="billingForm" style="display: none;">
            <!-- Billing form fields similar to shipping -->
            <div class="row">
              <div class="col-md-6">
                <%= f.label :billing_first_name, class: "form-label" %>
                <%= f.text_field :billing_first_name, class: "form-control" %>
              </div>
              <div class="col-md-6">
                <%= f.label :billing_last_name, class: "form-label" %>
                <%= f.text_field :billing_last_name, class: "form-control" %>
              </div>
            </div>
            <!-- Add other billing fields as needed -->
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h5>Payment Method</h5>
          </div>
          <div class="card-body">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="payment_method" id="creditCard" value="credit_card" checked>
              <label class="form-check-label" for="creditCard">
                Credit Card
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="payment_method" id="paypal" value="paypal">
              <label class="form-check-label" for="paypal">
                PayPal
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="card">
          <div class="card-header">
            <h5>Order Summary</h5>
          </div>
          <div class="card-body">
            <% @cart_items.each do |item| %>
              <div class="d-flex justify-content-between mb-2">
                <span><%= item[:product].name %> Ã— <%= item[:quantity] %></span>
                <span>$<%= item[:subtotal] %></span>
              </div>
            <% end %>

            <hr>

            <div class="d-flex justify-content-between mb-2">
              <span>Subtotal:</span>
              <span>$<%= @cart_items.sum { |item| item[:subtotal] } %></span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span>Shipping:</span>
              <span>$9.99</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span>Tax (HST):</span>
              <span>$<%= (@cart_items.sum { |item| item[:subtotal] } * 0.13).round(2) %></span>
            </div>

            <hr>

            <div class="d-flex justify-content-between fw-bold h5">
              <span>Total:</span>
              <span>$<%= (@cart_items.sum { |item| item[:subtotal] } * 1.13 + 9.99).round(2) %></span>
            </div>

            <div class="d-grid mt-3">
              <%= f.submit "Place Order", class: "btn btn-success btn-lg" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
document.getElementById('sameAsShipping').addEventListener('change', function() {
  const billingForm = document.getElementById('billingForm');
  if (this.checked) {
    billingForm.style.display = 'none';
  } else {
    billingForm.style.display = 'block';
  }
});
</script>
